
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Admins can read and write all documents
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Allow logged-in users to read other user profiles (except admins)
    match /users/{userId} {
       allow get: if request.auth.uid != null && resource.data.role != 'admin';
       allow list: if request.auth.uid != null;
    }

    // Likes
    match /likesReceived/{likeId} {
      allow read, create, delete: if request.auth.uid != null;
    }
  }
}
