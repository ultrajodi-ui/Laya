
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read the users collection for browsing and profile viewing.
    // Allow users to create, update, or delete their own document.
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to manage likes.
    // The application logic ensures users can only create/delete their own likes.
    match /likesReceived/{likeId} {
      allow read, write: if request.auth != null;
    }
  }
}
