rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read, create, and update their own document.
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to list or get user documents (for browsing profiles).
      allow list, get: if request.auth != null;
    }
    
    match /likesReceived/{likeId} {
        // Allow any authenticated user to read, write, and delete from the likesReceived collection
        allow read, write, delete: if request.auth != null;
    }

    // A catch-all rule to prevent unsecured access to other collections.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
