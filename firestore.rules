rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read any user profile,
    // but only write to their own. This is needed for browsing, viewing profiles,
    // and the admin dashboard.
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth.uid == userId;
    }
    
    // Allow authenticated users to manage likes.
    // The application logic ensures users can only create/delete their own likes.
    match /likesReceived/{likeId} {
        allow read, create, delete: if request.auth != null;
    }
  }
}
