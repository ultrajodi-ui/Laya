
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read, update, and delete their own profile
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Admins can read and write any user's profile
    match /users/{userId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow logged-in users to create support queries
    match /supportQueries/{queryId} {
      allow create: if request.auth.uid != null;
      // Admins can read all support queries
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

     match /likesReceived/{likeId} {
      allow read, write, delete: if request.auth != null;
    }
  }
}

    