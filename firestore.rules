rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the requesting user is an admin.
    function isAdmin() {
      // An admin user has a document in the 'users' collection
      // with their UID, and that document has a 'role' field set to 'admin'.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // ANY authenticated user can read any user's profile.
      // This is necessary for the browse and profile view pages to function.
      allow read: if request.auth != null;

      // Users can ONLY create their own user document.
      allow create: if request.auth.uid == userId;
      
      // Users can ONLY update or delete their own user document.
      allow update, delete: if request.auth.uid == userId;
    }

    match /users/{document=**} {
        // Admins can read all documents in the 'users' collection.
        // This is necessary for the admin dashboard.
        allow read: if isAdmin();
    }
    
    match /likesReceived/{likeId} {
      // A user can create a "like" record if they are authenticated.
      // The likeId should be in the format: senderId_likes_receiverId
      allow create: if request.auth != null && request.resource.id.startsWith(request.auth.uid);

      // A user can only delete a "like" record that they created.
      allow delete: if request.auth != null && resource.data.likedBy == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.memberid;
    }
  }
}
