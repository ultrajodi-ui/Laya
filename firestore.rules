rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // User Profiles
    match /users/{userId} {
      // Any authenticated user can view any profile (for browsing)
      allow read: if request.auth != null;
      // Only the user themselves or an admin can create/update their profile
      allow write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Only the user themselves or an admin can delete their profile
      allow delete: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Likes Received
    match /likesReceived/{likeId} {
        // Any authenticated user can create a like. The like document ID is structured to prevent duplicates.
        allow create: if request.auth != null;
        // Allow read/delete only if the user is the one who was liked, or the one who gave the like.
        allow read, delete: if request.auth != null && (
                            resource.data.likedUser == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.memberid ||
                            resource.data.likedBy == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.memberid
                           );
        allow update: if false; // Likes cannot be updated, only created/deleted.
    }
    
    // Support Queries
    match /supportQueries/{queryId} {
        // Any authenticated user can create a support query.
        allow create: if request.auth != null;
        
        // Only an admin can read, update, or delete support queries.
        allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
