rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default to denying all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow any authenticated user to read user profiles (needed for browse and profile view)
      allow get, list: if request.auth != null;
      
      // Allow a user to create their own document
      allow create: if request.auth.uid == userId;

      // Allow a user to update their own document
      allow update: if request.auth.uid == userId;
    }

    // Rules for the 'likesReceived' collection
    match /likesReceived/{likeId} {
      // Allow authenticated users to read, create and delete likes.
      // App logic ensures users can only manage their own likes.
      allow read, write: if request.auth != null;
    }
  }
}
