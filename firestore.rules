rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Allow any authenticated user to read any profile.
      // This is needed for the browse page and profile pages to function.
      allow read: if request.auth != null;

      // Allow a user to create, update, and delete their own document.
      allow write: if request.auth.uid == userId;

      // Additionally, allow an admin to read any user document. 
      // While covered by the general read rule, this makes the intent explicit.
      allow read: if request.auth != null && isAdmin();
    }
    
    match /likesReceived/{likeId} {
      // Users can only create and delete their own like records.
      // The likeId is formatted as "likerMemberId_likes_likedMemberId".
      allow create, delete: if request.auth != null && request.resource.id.startsWith(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.memberid);
      
      // No one should be able to update or list all likes.
      allow read, update: if false;
    }
  }
}