rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read user profiles,
    // but only allow users to write to their own profile.
    match /users/{userId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to the likesReceived collection.
    // The application logic ensures users can only create/delete their own likes.
    match /likesReceived/{likeId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null;
    }
  }
}
