rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Admins can read any user document
      // Authenticated users can read any user document (for profile browsing)
      allow read: if request.auth != null;

      // Only the user themselves can create or update their own document
      allow create, update: if request.auth.uid == userId;

      // Only the user themselves or an admin can delete their document
      allow delete: if request.auth.uid == userId || isAdmin();
    }

    match /likesReceived/{likeId} {
      // A user can only create a like record if the 'likedBy' field matches their own member ID
      // and the likeId is correctly formatted.
      allow create: if request.auth != null && request.resource.data.likedBy == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.memberid
                      && likeId == request.resource.data.likedBy + '_likes_' + request.resource.data.likedUser;
                      
      // A user can only delete a like they created. We check this by comparing the start of the document ID.
      allow delete: if request.auth != null && likeId.startsWith(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.memberid);
    }
  }
}
