rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      // Allow read access for any authenticated user or an admin
      allow read: if request.auth != null || isAdmin();
      
      // Allow create, update, delete access only for the user themselves or an admin
      allow write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }

    match /likesReceived/{likeId} {
      // Allow read and write for any authenticated user
      allow read, write: if request.auth != null || isAdmin();
    }
  }
}

