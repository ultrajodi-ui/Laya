rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow admins full access
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Rules for non-admin users
    match /users/{userId} {
      // Allow users to read their own profile and other public profiles
      allow get: if request.auth != null;
      // Allow users to read the full list of users for browsing (queries will be filtered on the client)
      allow list: if request.auth != null;
      // Allow users to create their own profile and update it
      allow create, update: if request.auth.uid == userId;
    }

    match /supportQueries/{queryId} {
        // Allow any authenticated user to create a support query
        allow create: if request.auth != null;
    }
    
    match /likesReceived/{likeId} {
        // Allow any authenticated user to create or delete likes
        allow create, delete: if request.auth != null;
    }
  }
}
