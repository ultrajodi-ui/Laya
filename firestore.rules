
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can view profiles (for browsing)
      allow get, list: if request.auth != null;
      // A user can create, update, and delete only their own profile
      allow create, update, delete: if request.auth.uid == userId;
    }
    
    // Admins can read/write to the deletedUsers collection
    match /deletedUsers/{docId} {
       allow read, write: if isAdmin();
    }

    // Rules for the 'likesReceived' collection
    match /likesReceived/{likeId} {
        // Allow creating a like if authenticated
        allow create: if request.auth != null;
        // Allow deleting a like if you are the one who sent it (likeId is formatted as sender_likes_receiver)
        allow delete: if request.auth != null && request.auth.uid == resource.data.likedBy;
    }
    
    // Allow authenticated users to create support queries
    match /supportQueries/{queryId} {
        allow create: if request.auth != null;
        // Only admins can read/update/delete support queries
        allow read, update, delete: if isAdmin();
    }
  }
}
