
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an admin.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow admins to read and write any document in the database.
    match /{document=**} {
      allow read, write: if request.auth != null && isAdmin();
    }
    
    match /users/{userId} {
      // Allow users to read and update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow logged-in users to read other user profiles, but not admin profiles.
      allow read: if request.auth != null && resource.data.role != 'admin';
       // Allow anyone to create their own user document (on signup).
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    match /likesReceived/{likeId} {
        // Allow any authenticated user to create or delete likes.
        allow create, delete, read: if request.auth != null;
    }
    
    match /supportQueries/{queryId} {
        // Allow any authenticated user to create support queries.
        allow create: if request.auth != null;
    }
  }
}
