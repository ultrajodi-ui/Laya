rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow read access for any authenticated user.
      // This is necessary for profile browsing.
      allow read: if request.auth != null;

      // Allow users to create, update, and delete their own document.
      allow write: if isOwner(userId);
    }
    
    match /likesReceived/{likeId} {
      // Users can create a "like" if they are the one liking.
      // The likeId is formatted as "likerId_likes_likedId".
      allow create: if request.auth != null && request.auth.uid == likeId.split('_likes_')[0];
      
      // Users can delete their own "like" record.
      allow delete: if request.auth != null && request.auth.uid == resource.data.likedBy;
    }
  }
}
