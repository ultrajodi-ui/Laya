
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read all other user profiles, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Allow users to create/delete their own likes, but not view others' likes directly.
    // The document ID is structured as: {likerMemberId}_likes_{likedMemberId}
    match /likesReceived/{likeId} {
      allow read: if request.auth != null; // Further rules can be added for querying if needed.
      allow create, delete: if request.auth != null && likeId.startsWith(request.auth.uid);
      allow update: if false; // Likes are either created or deleted, not updated.
    }
  }
}
    